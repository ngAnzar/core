
// round-size small, medium, large, full
nz-rounded-rect(width, height, round-size)
  width: width
  height: height
  if round-size == "small"
    border-radius: 3px
  else if round-size == "medium"
    border-radius: 5px
  else if round-size == "large"
    border-radius: 10px
  else if round-size == "full"
    border-radius: 50%

nz-circle(radius)
  width: radius * 2
  height: radius * 2
  border-radius: 50%
  overflow: hidden


nz-squiggly-underline($color)
  border-bottom: 2px dotted $color
  position: relative
  padding-bottom: 1px

  &:after
    content: ""
    position: absolute
    left: 2px
    width: 100%
    bottom: -3px
    display: block
    height: 0px

    border-bottom: 2px dotted $color
