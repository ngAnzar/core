{
    "compilerOptions": {
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        // "inlineSources": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        // "emitDecoratorMetadata": true,
        "noEmit": true,
        "noEmitHelpers": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "newLine": "LF"
    },
    "compileOnSave": false,
    "angularCompilerOptions": {
        "genDir": "./dist/aot",
        "skipMetadataEmit": true
    }
}
