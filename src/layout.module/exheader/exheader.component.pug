:stylus
  .container
    width: 100%
    max-width: 100%
    height: 100%
    max-height: 100%
    overflow: hidden

  .header
    overflow: hidden
    position: relative

  .content
    overflow: hidden
    position: relative


.container(fxFlex="grow", fxLayout="column", fxLayoutAlign="start stretch")
  .header(
      #header,
      fxFlex="none",
      [style.height]="disabled ? null : headerMinHeight + 'px'",
      [attr.elevation]="elevated ? 2 : null")
    ng-content(select="nz-exheader-header")

  .content(#content, fxFlex="grow", fxLayout="column", fxLayoutAlign="start stretch")
    ng-content(select="nz-exheader-content")
