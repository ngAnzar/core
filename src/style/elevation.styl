$nz-elevation-transition-duration ?= 280ms
$nz-elevation-color ?= #000
$nz-elevation-opacity ?= 1

-nz-elevation-get-umbra(level, color, opacity)
  map = {
    "0": 0px 0px 0px 0px alpha(color, opacity * 0.2),
    "1": 0px 2px 1px -1px alpha(color, opacity * 0.2),
    "2": 0px 3px 1px -2px alpha(color, opacity * 0.2),
    "3": 0px 3px 3px -2px alpha(color, opacity * 0.2),
    "4": 0px 2px 4px -1px alpha(color, opacity * 0.2),
    "5": 0px 3px 5px -1px alpha(color, opacity * 0.2),
    "6": 0px 3px 5px -1px alpha(color, opacity * 0.2),
    "7": 0px 4px 5px -2px alpha(color, opacity * 0.2),
    "8": 0px 5px 5px -3px alpha(color, opacity * 0.2),
    "9": 0px 5px 6px -3px alpha(color, opacity * 0.2),
    "10": 0px 6px 6px -3px alpha(color, opacity * 0.2),
    "11": 0px 6px 7px -4px alpha(color, opacity * 0.2),
    "12": 0px 7px 8px -4px alpha(color, opacity * 0.2),
    "13": 0px 7px 8px -4px alpha(color, opacity * 0.2),
    "14": 0px 7px 9px -4px alpha(color, opacity * 0.2),
    "15": 0px 8px 9px -5px alpha(color, opacity * 0.2),
    "16": 0px 8px 10px -5px alpha(color, opacity * 0.2),
    "17": 0px 8px 11px -5px alpha(color, opacity * 0.2),
    "18": 0px 9px 11px -5px alpha(color, opacity * 0.2),
    "19": 0px 9px 12px -6px alpha(color, opacity * 0.2),
    "20": 0px 10px 13px -6px alpha(color, opacity * 0.2),
    "21": 0px 10px 13px -6px alpha(color, opacity * 0.2),
    "22": 0px 10px 14px -6px alpha(color, opacity * 0.2),
    "23": 0px 11px 14px -7px alpha(color, opacity * 0.2),
    "24": 0px 11px 15px -7px alpha(color, opacity * 0.2)
  }
  map[s("%s", level)]

-nz-elevation-get-penumbra(level, color, opacity)
  map = {
    "0": 0px 0px 0px 0px alpha(color, opacity * 0.14),
    "1": 0px 1px 1px 0px alpha(color, opacity * 0.14),
    "2": 0px 2px 2px 0px alpha(color, opacity * 0.14),
    "3": 0px 3px 4px 0px alpha(color, opacity * 0.14),
    "4": 0px 4px 5px 0px alpha(color, opacity * 0.14),
    "5": 0px 5px 8px 0px alpha(color, opacity * 0.14),
    "6": 0px 6px 10px 0px alpha(color, opacity * 0.14),
    "7": 0px 7px 10px 1px alpha(color, opacity * 0.14),
    "8": 0px 8px 10px 1px alpha(color, opacity * 0.14),
    "9": 0px 9px 12px 1px alpha(color, opacity * 0.14),
    "10": 0px 10px 14px 1px alpha(color, opacity * 0.14),
    "11": 0px 11px 15px 1px alpha(color, opacity * 0.14),
    "12": 0px 12px 17px 2px alpha(color, opacity * 0.14),
    "13": 0px 13px 19px 2px alpha(color, opacity * 0.14),
    "14": 0px 14px 21px 2px alpha(color, opacity * 0.14),
    "15": 0px 15px 22px 2px alpha(color, opacity * 0.14),
    "16": 0px 16px 24px 2px alpha(color, opacity * 0.14),
    "17": 0px 17px 26px 2px alpha(color, opacity * 0.14),
    "18": 0px 18px 28px 2px alpha(color, opacity * 0.14),
    "19": 0px 19px 29px 2px alpha(color, opacity * 0.14),
    "20": 0px 20px 31px 3px alpha(color, opacity * 0.14),
    "21": 0px 21px 33px 3px alpha(color, opacity * 0.14),
    "22": 0px 22px 35px 3px alpha(color, opacity * 0.14),
    "23": 0px 23px 36px 3px alpha(color, opacity * 0.14),
    "24": 0px 24px 38px 3px alpha(color, opacity * 0.14)
  }
  map[s("%s", level)]

-nz-elevation-get-ambient(level, color, opacity)
  map = {
    "0": 0px 0px 0px 0px alpha(color, opacity * 0.12),
    "1": 0px 1px 3px 0px alpha(color, opacity * 0.12),
    "2": 0px 1px 5px 0px alpha(color, opacity * 0.12),
    "3": 0px 1px 8px 0px alpha(color, opacity * 0.12),
    "4": 0px 1px 10px 0px alpha(color, opacity * 0.12),
    "5": 0px 1px 14px 0px alpha(color, opacity * 0.12),
    "6": 0px 1px 18px 0px alpha(color, opacity * 0.12),
    "7": 0px 2px 16px 1px alpha(color, opacity * 0.12),
    "8": 0px 3px 14px 2px alpha(color, opacity * 0.12),
    "9": 0px 3px 16px 2px alpha(color, opacity * 0.12),
    "10": 0px 4px 18px 3px alpha(color, opacity * 0.12),
    "11": 0px 4px 20px 3px alpha(color, opacity * 0.12),
    "12": 0px 5px 22px 4px alpha(color, opacity * 0.12),
    "13": 0px 5px 24px 4px alpha(color, opacity * 0.12),
    "14": 0px 5px 26px 4px alpha(color, opacity * 0.12),
    "15": 0px 6px 28px 5px alpha(color, opacity * 0.12),
    "16": 0px 6px 30px 5px alpha(color, opacity * 0.12),
    "17": 0px 6px 32px 5px alpha(color, opacity * 0.12),
    "18": 0px 7px 34px 6px alpha(color, opacity * 0.12),
    "19": 0px 7px 36px 6px alpha(color, opacity * 0.12),
    "20": 0px 8px 38px 7px alpha(color, opacity * 0.12),
    "21": 0px 8px 40px 7px alpha(color, opacity * 0.12),
    "22": 0px 8px 42px 7px alpha(color, opacity * 0.12),
    "23": 0px 9px 44px 8px alpha(color, opacity * 0.12),
    "24": 0px 9px 46px 8px alpha(color, opacity * 0.12)
  }
  map[s("%s", level)]


nz-elevation(level, color = $nz-elevation-color, opacity = $nz-elevation-opacity)
  box-shadow: -nz-elevation-get-umbra(level, color, opacity),
        -nz-elevation-get-penumbra(level, color, opacity),
        -nz-elevation-get-ambient(level, color, opacity);
