:stylus
  .filter
    padding: 8px
    border-top: 1px solid lighten($theme.base.on.normal, 85%)
    background-color: lighten($theme.base.on.normal, 95%)
    flex: none

ng-content(select=".nz-columns")

ng-template([ngIf]="filterSvc")
  ng-container(*ngIf="filterSvc.appliedFilters | async as appliedFilters")
    div.filter(*ngIf="appliedFilters.length > 0", fxLayout="row", fxLayoutGap="8px", fxLayoutAlign="start center")
      ng-template(ngFor, [ngForOf]="appliedFilters", let-editor)
        ng-container([ngTemplateOutlet]="editor.chip", [ngTemplateOutletContext]="{$implicit:editor}")
