@require "../../style/layout"
@require "../../style/typography"
@require "../form-field/form-field.styl"

$nz-navbar-height ?= nz-local-grid-size(14)

.nz-navbar
  position: relative
  display: flex
  background: $theme.primary.default
  padding: 0 nz-local-grid-size(4)
  align-items: center
  align-content: center
  height: $nz-navbar-height

.nz-navbar h1
  color: $theme.primary.on.default
  nz-typo: $typo.h6
  margin: 0

.nz-navbar .nz-button:not([color]):not([disabled]):not([variant~="filled"]),
.nz-navbar .nz-fab:not([color]):not([disabled]):not([variant~="filled"])
  color: $theme.primary.on.default


.nz-navbar-search
  min-width: 100px
  margin-right: 8px

  .underline
    display: none

  caption
    display: none

  &.nz-focused, &.nz-has-value
    background-color: #FFF
