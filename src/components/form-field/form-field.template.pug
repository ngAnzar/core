:stylus
  @require "./form-field"

  .input-container
    width: 100%
    max-width: 100%
    box-sizing: border-box
    //- display: inline-flex
    //- align-items: baseline
    padding: $nz-form-field-input-padding 0

  .before-input, .after-input
    flex: none
    white-space: nowrap
    cursor: default

  .input-component
    position: relative
    cursor: text

  .underline
    height: 1px
    background-color: $theme.foreground.lighter
    position: relative

    &[highlighted]
      .nz-form-field-ripple
        opacity: 1
        transform: scaleX(1)

  .nz-form-field-ripple
    height: 2px
    position: absolute
    top: 0px
    opacity: 0
    background-color: $theme.primary.default
    width: 100%

    transform-origin: 50%
    transform: scaleX(.5)

    transition: transform $nz-input-focus-transition-duration, opacity $nz-input-focus-transition-duration

  .caption
    height: $nz-form-field-bottom-caption-height

- var x = style("nz-label")

.nz-inline-hbox.input-container
  .before-input(*ngIf="_prefixDirectives.length")
    ng-content(select=".nz-prefix")

  .input-component(flex=1)
    ng-content
    ng-content(select="label, .nz-label")

  .after-input(*ngIf="_postfixDirectives.length")
    ng-content(select=".nz-postfix")

.underline(#underline *ngIf="showUnderline")
  .nz-form-field-ripple

.caption
  ng-content(select="caption, .nz-caption")
