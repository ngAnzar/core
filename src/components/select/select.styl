@require "../../style/elevation"

$nz-select-item-height ?= nz-local-grid-size(12)

.nz-select
  position: relative
  font: inherit
  background: transparent
  border: none
  outline: none
  padding: 0
  margin: 0
  width: 100%
  max-width: 100%
  vertical-align: bottom
  text-align: left

  display: inline-flex
  flex-direction: row
  align-items: center

  &[editable]
    cursor: text

  &:not([editable])
    cursor: pointer
