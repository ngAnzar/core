@require "../../style/elevation"

$nz-select-item-height ?= nz-local-grid-size(12)

.nz-select
  position: relative
  font: inherit
  background: transparent
  border: none
  outline: none
  padding: 0
  margin: 0
  width: 100%
  max-width: 100%
  vertical-align: bottom
  text-align: inherit

.nz-arrow-down
  display: inline-block
  width: 0
  height: 0
  border-left: 8px solid transparent
  border-right: 8px solid transparent
  border-top: 8px solid $theme.foreground.lighter

