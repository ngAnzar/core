

.nz-scroller
  overflow: hidden
  position: relative


.nz-scrollbar
  position: absolute
  user-select: none

  &[orient="horizontal"]
    left: 5
    bottom: 0

  &[orient="vertical"]
    top: 5
    right: 0

    .nz-scrollbar-bar
      right: 3px
      width: 5px
      border-radius: 5px
      transition: width 250ms, right 250ms

    &:hover
      .nz-scrollbar-bar
        right: 1px
        width: 10px


.nz-scrollbar-bar
  position: absolute
  background-color: #848484
  opacity: 0.7
