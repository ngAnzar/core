@require "../list/list"

.nz-exlist
  overflow: hidden
  position: relative

.nz-exlist-item
  position: relative
  padding: 0
  overflow: visible !important

  background-color: $theme.base.normal

  display: flex
  align-items: center
  justify-content: space-between
  white-space: nowrap
  nz-typo: $typo.body2
  transition: margin 200ms cubic-bezier(0.215, 0.61, 0.355, 1)

  &:before
    display: block
    content: " "
    position: absolute
    pointer-events: none
    top: 0
    left: 0
    right: 0
    bottom: 0
    box-shadow: 0 -1px 0 $theme.base.dark,
      0 0 2px rgba(0, 0, 0, .12),
      0 2px 4px rgba(0, 0, 0, .24)

  &[without-animation]
    transition: none


.nz-exlist-item-collapsed
  width: 100%
  height: 100%

  &:hover
    background-color: alpha($theme.base.on.normal, 0.1)
