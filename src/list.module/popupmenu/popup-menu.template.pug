:stylus
  .menu-item
    cursor: pointer

  .scroller
    max-height: inherit
    max-width: inherit

ng-template(#layer let-trigger)
  .nz-scroller.scroller
    .nz-list(scrollable)
      ng-template(ngFor bind-ngForOf="menuItems" let-menuItem)
        .nz-list-item.menu-item(on-tap="!$event.defaultPrevented && trigger.hide()" #listItem)
          ng-template(bind-ngTemplateOutlet="menuItem.tpl")
