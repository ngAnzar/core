:stylus
  .main
    overflow: hidden
    width: 100%
    height: 100%
    max-width: 100%
    max-height: 100%
    position: relative
    z-index: 10
    background: $theme.base.normal

  .main-rounded
    border-radius: 3px

  .back
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    z-index: 1

.main(#content, [ngClass]=`{"${style('main-rounded')}": _backIsVisible}`)
  ng-content(select=":not([nzSlideableBack])")

.back(*ngIf="_backIsVisible")
  ng-content(select="[nzSlideableBack]")
