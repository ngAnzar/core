.nz-slideable
  position: relative
  overflow: hidden


[nzSlideableBack]
  display: none
  flex-direction: row
  flex-wrap: nowrap
  align-items: center
  align-content: stretch
  width: 100%
  height: 100%
  max-width: 100%
  max-height: 100%
  overflow: hidden

[nzSlideableBack="left"]
  justify-content: flex-end

[nzSlideableBack="right"]
  justify-content: flex-start
