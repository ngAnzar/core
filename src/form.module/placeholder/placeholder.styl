

.nz-placeholder
  position: relative

  label
    position: absolute
    top: 0px
    left: 2px
    right: 0px
    bottom: 0px
    cursor: text
    color: $theme.common.light
    transition: all $nz-form-anim-duration
    user-select: none
    pointer-events: none
    opacity: 1

  &.hide-label[variant="hide"]
    label
      opacity: 0

  &.hide-label[variant="translate"]
    label
      nz-typo: $typo.caption
      transform: translateY(-100%)
