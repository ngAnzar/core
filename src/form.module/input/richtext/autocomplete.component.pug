:stylus
  .item
    padding: 0 12px !important
    cursor: pointer
    user-select: none

  .icon
    display: inline-block
    background-size: 100%
    background-repeat: no-repeat
    width: 20px
    height: 20px
    margin-right: 8px

  .note
    nz-typo: $typo.body2
    opacity: 0.7


.nz-scroller.scroller(fxFlex="grow")
  .nz-list(fxLayout="column", fxLayoutAlign="start stretch", scrollable)
    .nz-list-item.item(*ngFor="let item of items; let i=index",
        [selectable]="item",
        [selectionIndex]="i",
        [attr.color]="item.isAction ? 'accent' : 'common'",
        (mousedown)="$event.preventDefault()",
        (touchstart)="$event.preventDefault()")
      i.icon([style.background-image]="item.iconSafe")
      div([style.font-style]="item.isAction ? 'italic' : 'normal'")
        span {{ item.label }}
        ng-template([ngIf]="item.note")
          br
          span.note {{ item.note }}
