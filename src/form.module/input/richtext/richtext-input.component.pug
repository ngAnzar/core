:stylus
  .scroller
    width: 100%
    height: 100%
    max-height: inherit !important
    max-width: inherit !important
    display: block !important

  .editor
    min-height: nz-local-grid-size(5)


.nz-scroller.scroller(#scroller)
  div(scrollable)
    .editor(#input="nzRichtext", [nzRichtext]="", contenteditable="true",
      on-focus="_handleFocus(true)",
      on-blur="_handleFocus(false)",
      on-cursorMove="_updateMenu()",
      on-change="_handleInput($event)")
