:stylus
  .scroller
    width: 100%
    height: 100%
    max-height: inherit
    max-width: inherit
    display: block !important

  .editor
    min-height: nz-local-grid-size(5)


.nz-scroller.scroller
  div(scrollable)
    .editor(#input="nzRichtext", [nzRichtext]="", contenteditable="true",
      on-focus="_handleFocus(true)",
      on-blur="_handleFocus(false)",
      on-input="_handleInput($event.target.innerHTML)")
