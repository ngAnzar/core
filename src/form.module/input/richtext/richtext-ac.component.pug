:stylus
  .item
    padding: 0 12px !important
    cursor: pointer
    user-select: none


.nz-scroller.scroller(fxFlex="grow")
  div(scrollable)
    .nz-list(fxLayout="column", fxLayoutAlign="start stretch")
      .nz-list-item.item(*ngFor="let item of items | async; let i=index", [selectable]="item", [selectionIndex]="i") {{ item.label }}
