@require "../../../util"

input[type="date"].nz-input, input[type="time"].nz-input
  opacity: 0
  transition: opacity 250ms

  &:focus, &.nz-has-value
    opacity: 1

.nz-datetime-input
  display: flex

  &.cdk-focused, &.nz-has-value
    input[type="date"].nz-input, input[type="time"].nz-input
      opacity: 1


.nz-number-scroll
  min-width: 28px
  max-height: (36 * 3)px
  min-height: (36 * 3)px
