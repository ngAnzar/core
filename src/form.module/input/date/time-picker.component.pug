:stylus
  nz-time-picker
    background: $theme.base.normal
    padding: 16px

  .time
    width: (16 * 2 + 28 * 2 + 8 * 2 + 25)px
    max-width: (16 * 2 + 28 * 2 + 8 * 2 + 25)px

  .topdot
    margin-bottom: -12px

div(fxFlex="grow", fxLayout="column", fxLayoutAlign="start center", fxLayoutGap="8px")
  div.time(fxFlex="grow", fxLayout="row", fxLayoutAlign="start center", fxLayoutGap="8px")
    .nz-number-scroll(fxFlex="none", type="hour", [value]="hour", (value)="hour=$event")
    div(fxFlex="grow", fxLayout="column", fxLayoutAlign="center center")
      i.nz-icon.topdot(class=icon("mdi/circle-small"), color="common")
      i.nz-icon(class=icon("mdi/circle-small"), color="common")
    .nz-number-scroll(fxFlex="none", type="minute", [value]="minute", (value)="minute=$event")

  div.buttons(*ngIf="showButtons", fxFlex="none", fxLayout="row", fxLayoutAlign="center", fxLayoutGap="8px")
    button.nz-button(color="base", variant="filled", (tap)="cancel()") MÉGSE
    button.nz-button(color="confirm", (tap)="onCommitValue()") KÉSZ
