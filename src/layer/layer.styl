@require "../style/elevation"


.nz-layer-container
  visibility: hidden
  position: absolute
  display: inline-block

for i in range(0, 24)
  {'[elevation="' + i + '"]'}
    &:before
      content: ""
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      pointer-events: none
      z-index: 0
      nz-elevation: i


.nz-layer-backdrop
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0

.nz-layer-backdrop-filled
  background-color: rgba(0, 0, 0, 0.5)

