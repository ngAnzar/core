:stylus
  nz-toast
    background: $theme.base.on.light
    color: $theme.base.normal
    display: inline-flex
    flex-direction: row
    align-items: center
    max-width: inherit
    max-height: inherit

  .content
    padding: 8px 16px

  .buttons
    padding: $nz-dialog-inner-margin $nz-dialog-padding-side $nz-dialog-padding-side 0
    margin: 0 0 0 $nz-dialog-padding-side

.content(fxFlex="grow")
  ng-template(bind-cdkPortalOutlet="content")

.buttons(fxFlex="noshrink", fxLayout="row", fxLayoutGap="8px", fxLayoutAlign="start start", *ngIf="buttons && buttons.length")
  ng-template(ngFor bind-ngForOf="buttons" let-button)
    button.nz-button(*ngIf="button.role != 'spacer'",
      fxFlex="noshrink",
      [color]="button.color",
      [attr.variant]="button.variant",
      [attr.type]="button.type",
      on-tap="_handleButtonClick($event, button.role)") {{ button.label }}
    div.spacer(*ngIf="button.role === 'spacer'", fxFlex="noshrink")
