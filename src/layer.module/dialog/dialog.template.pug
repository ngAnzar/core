:stylus
  @require "./dialog.styl"

  .title
    margin: 0
    padding: $nz-dialog-padding-top-bottom ($nz-dialog-padding-side + $nz-dialog-padding-top-bottom) $nz-dialog-inner-margin ($nz-dialog-padding-side + $nz-dialog-padding-top-bottom)
    flex: none

  .buttons
    flex: none
    display: flex
    padding: $nz-dialog-inner-margin $nz-dialog-padding-side $nz-dialog-padding-side 0

    .nz-button
      flex: none
      margin: 0 0 0 $nz-dialog-padding-side

  .content
    flex: 1
    overflow: hidden

  .message-content
    padding: $nz-dialog-inner-margin ($nz-dialog-padding-side + $nz-dialog-padding-top-bottom)

  .spacer
    flex: 1

block title
  h6.title(bind-innerHTML="title" "*ngIf"="title && title.length")

block content
  .content(*ngIf="content" bind-ngClass=`{"${style('message-content')}": options.isPlainText}`)
    ng-template(bind-cdkPortalOutlet="content")

block buttons
  .buttons(*ngIf="buttons && buttons.length")
    ng-template(ngFor bind-ngForOf="buttons" let-button)
      button.nz-button(*ngIf="button.role != 'spacer'"
        bind-color="button.color"
        bind-attr.variant="button.variant"
        bind-attr.type="button.type"
        on-click="_handleButtonClick($event, button.role)") {{ button.label }}
      div.spacer(*ngIf="button.role === 'spacer'")
