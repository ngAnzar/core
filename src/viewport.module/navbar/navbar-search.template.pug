
div(#container, fxFlex="grow", fxLayout="row", fxLayoutAlign="start center", fxLayoutGap="16px")
  i.nz-icon(class=icon("mdi/magnify"))

  .nz-select(
    #select,
    fxFlex="grow",
    editable,
    hideTrigger,
    autoTrigger,
    [dataSource]="source",
    [nzLayerFactory]="AutocompleteComponent",
    [nzTargetEl]="container.parentElement"
    nzTargetAnchor="center bottom",
    nzLevitateAnchor="center top",
    on-opened="opened=$event",
    on-focused="focused=$event",
    on-empty="empty=$event")
    ng-content

  .nz-fab(*ngIf="!empty", fxFlex="0 0 28px", variant="tiny filled", on-click="select.reset()")
    i.nz-icon(class=icon("mdi/close"))
