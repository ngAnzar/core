

.nz-viewport
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden


.nz-viewport-content
  position: relative
  background-color: $theme.base.light

  > *
    max-height: 100% !important
    max-width: 100% !important

  > router-outlet + ng-component
    width: 100%
    height: 100%
    max-height: 100% !important
    max-width: 100% !important

  &.ng-animating
    .nz-scrollbar
      display: none
